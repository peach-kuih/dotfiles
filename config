background-alt = #373b41
foreground = #c5c8c6
foreground-alt = #707880
primary = #c5c8c6
secondary = #
alert = #0000ff

[bar/top]
bottom = false
background = ${colors.background}
foreground = ${colors.foreground}

;width = 100%
;height = 27
;radius = 6.0
fixed-center = true

line-size = 0
;line-color = #f00

